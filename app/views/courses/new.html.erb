<h2>New Course</h2>

<form action="<%= courses_url %>" method="post">
  <%= authenticity_token %>

  <label>
    Title
    <input type="text" name="course[title]" value="<%= @course.title %>" id="title">
  </label>

  <label>
    Description
    <input type="text" name="course[description]" value="<%= @course.description %>" id="description">
  </label>

  <input type="submit" value="Create New Course">
</form>
